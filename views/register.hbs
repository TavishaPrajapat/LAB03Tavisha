<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #D4BEE4; /* Light purple background */
    }

    h1 {
      font-size: 3rem; /* Adjust the font size */
      font-weight: bold; /* Make the header bold */
      text-align: center; /* Center align the header */
      color: #3B1E54; /* Set a deep color for the header */
      margin-top: 50px; /* Add top margin for spacing */
    }

    p {
      font-size: 1.2rem; /* Set the font size */
      color: #333; /* Dark grey color for better readability */
      text-align: center; /* Center align the paragraph */
      max-width: 800px; /* Limit the width for readability */
      margin: 20px auto; /* Center the paragraph and add margin for spacing */
      line-height: 1.6; /* Increase line height for better readability */
      padding: 0 15px; /* Add padding for responsive design */
    }

    form {
      max-width: 500px;
      margin: 30px auto;
      padding: 30px;
      background-color: white;
      border-radius: 12px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .form-group {
      margin-bottom: 20px;
      text-align: left;
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
      color: #3B1E54; /* Dark purple color for labels */
      font-size: 1.1rem;
    }

    input {
      width: 100%;
      padding: 12px;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      box-sizing: border-box; /* Ensures padding doesnâ€™t affect the width */
      transition: border-color 0.3s;
    }

    input:focus {
      border-color: #5c2a75; /* Focus border color */
      outline: none;
    }

    button, .btn {
      padding: 12px 24px;
      font-size: 1.2rem;
      cursor: pointer;
      border: none;
      border-radius: 8px;
      background-color: #3B1E54; /* Dark purple background */
      color: white;
      transition: background-color 0.3s;
    }

    .btn-info:hover, button:hover {
      background-color: #5c2a75; /* Slightly lighter shade on hover */
    }

    .btn-danger {
      background-color: #dc3545;
      color: white;
    }

    .btn-danger:hover {
      background-color: #c82333;
    }

    a {
      text-decoration: none;
      color: #007bff;
      font-weight: bold;
    }

    a:hover {
      text-decoration: underline;
    }

    hr {
      margin: 20px 0;
      border: 0;
      border-top: 1px solid #ddd;
    }

    .alert {
      padding: 15px;
      margin: 10px 0;
      border-radius: 5px;
      font-size: 1.1em;
    }

    .alert-danger {
      background-color: #f8d7da;
      color: #721c24;
    }

    .alert-info {
      background-color: #d1ecf1;
      color: #0c5460;
    }
  </style>
</head>
<body>
  <h1>Register</h1>
  <form method="post">
    <fieldset class="form-group">
      <label for="username" class="col-2 control-label">Username: *</label>
      <input
        name="username"
        id="username"
        required
        type="email"
        placeholder="email@email.com"
      />
    </fieldset>
    <fieldset class="form-group">
      <label for="password" class="col-2 control-label">Password: *</label>
      <input
        name="password"
        id="password"
        type="password"
        required
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
      />
    </fieldset>
    <fieldset class="form-group">
      <label for="confirm" class="col-2 control-label">Confirm: *</label>
      <input
        name="confirm"
        id="confirm"
        type="password"
        required
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
      />
    </fieldset>
    <fieldset class="form-group">
      <button class="btn btn-info">
        Register
      </button>
      <hr />
      Already have an account?
      <a href="/login" title="Login">
        Login
      </a>
    </fieldset>
  </form>
</body>
